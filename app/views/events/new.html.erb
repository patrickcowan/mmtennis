<div class="hero-unit">
<% provide(:title, 'Create New Event') %>
<h1>Create New Event</h1>


<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :Venue %>
      <%= f.text_field :Venue %>

      <%= f.label :Date %>
      <%= f.text_field :Date %>

      <%= f.label :Time %>
      <%= f.text_field :Time %>

      <%= f.label :Coaches %>
      <%= f.text_field :coaches %>

      <%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>
